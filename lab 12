#include <stdio.h>


int NumLen(int x) {
    int counter = 0;
    while (x > 0) {
        x = x / 10;
        counter++;
    }
    return counter;
}

int main() {
    int a, curr, mid, last, currS, temp;
	int mxC, mxM, mxL, mxS;
	mxS = 0;
    printf("Put the number:\n");
    scanf("%d", &a);
    int lenght = NumLen(a);
    if (a < 0) {
        a = -a;
    }

    if (lenght < 3) {
        printf("Errorrr\n");
    } else {
     while (a > 0) {
		temp = a;

        curr = temp % 10;
        temp /= 10;

        mid = temp % 10;
        temp /= 10;

        last = temp % 10;

        currS = curr + mid + last;

		a /= 10;

        if (currS > mxS) {
            mxS = currS;
            mxC = curr;
            mxM = mid;
            mxL = last;
        }
    }

printf("Digits which make max sum: %d%d%d\n", mxL, mxM, mxC);

    return 0;
    }
 
}
